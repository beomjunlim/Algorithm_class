// 스트링 편집 거리 대치 비용 1
#include <iostream>
#include <algorithm>
#include <string>
using namespace std;

int Editdistance(char s[], char t[], int m, int n)
{
  int D[m + 1][n + 1];
  D[0][0] = 0;
  int cost = 0;
  for (int i = 1; i <= n; i++)
  {
    D[i][0] = D[i - 1][0] + 1;
  }

  for (int j = 1; j <= m; j++)
  {
    D[0][j] = D[0][j - 1] + 1;
  }

  for (int i = 1; i <= n; i++)
  {
    for (int j = 1; j <= m; j++)
    {
      if (s[i - 1] == t[j - 1])
        cost = 0;
      else
        cost = 1;
      D[i][j] = min(D[i - 1][j - 1] + cost, min(D[i - 1][j] + 1, D[i][j - 1] + 1));
    }
  }
  for (int i = 0; i < m; i++)
  {
    for (int j = 0; j < n; j++)
    {
      cout << D[i][j] << " ";
    }
    cout << endl;
  }
  return D[n][m];
}

int main()
{
  char t[] = "GAMBOL";
  char s[] = "GUMBO";
  int n = strlen(t);
  int m = strlen(s);
  cout << Editdistance(t, s, m, n) << endl;
}
