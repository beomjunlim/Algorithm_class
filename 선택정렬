#include <iostream>
using namespace std;

void Selection_Sort(int arr[], int n)
{
  int min, i, j;
  for (i = 0; i < n - 1; i++)
  {
    min = i;
    for (j = i + 1; j < n; j++)
    {
      if (arr[j] < arr[min])
      {
        min = j;
      }
    }
    int temp = arr[i];
    arr[i] = arr[min];
    arr[min] = temp;
  }
}

int main()
{
  int arr[10] = {4, 5, 9, 6, 8, 10, 1, 3, 2, 7};
  Selection_Sort(arr, 10);
  cout << "Selection Sort : ";
  for (int i = 0; i < 10; i++)
  {
    cout << arr[i] << " ";
  }
  cout << endl;
}
